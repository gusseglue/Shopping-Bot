    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "bullmq": "^5.1.1",
    "cheerio": "^1.0.0-rc.12",
    "ioredis": "^5.3.2",
    "node-fetch": "^3.3.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^5.8.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/*.spec.ts", "**/*.test.ts"]
  }
